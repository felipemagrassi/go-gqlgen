# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Category { 
  id: ID!
  name: String!
  description: String
  courses: [Course!]!
}

type Course { 
  id: ID!
  name: String!
  description: String
  category: Category!
}

input NewCourse { 
  name: String!
  description: String
  category: ID!
}

input NewCategory {
  name: String!
  description: String
}

type Query {
  categories: [Category!]!
  courses: [Course!]!
}

type Mutation {
  createCategory(input: NewCategory!): Category!
  createCourse(input: NewCourse!): Course!
}

